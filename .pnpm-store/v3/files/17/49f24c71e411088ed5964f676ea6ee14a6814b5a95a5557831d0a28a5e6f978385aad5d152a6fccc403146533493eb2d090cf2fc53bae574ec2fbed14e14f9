const resolveFile = async (resolved, index = false)=>{
    const fileWithoutExt = resolved.replace(INCLUDE_REGEXP, '');
    for (const ext of ACCEPTED_EXTENSIONS){
        const file = index ? path.join(resolved, `index${ext}`) : `${fileWithoutExt}${ext}`;
